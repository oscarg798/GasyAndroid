<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rm.com.gasy">

    <application
        android:name=".applications.GasyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="roboguice.annotations.packages"
            android:value="rm.com.gasy" />
        <meta-data
            android:name="roboguice.modules"
            android:value="rm.com.gasy.robo_modules.GasyModule" />

        <provider
            android:name=".persistence.contentsproviders.TankingProvider"
            android:authorities="com.rm.gasy.contentproviders" />

        <activity
            android:name=".presentation.activities.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.activities.AddTankingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.activities.HomeActivity"
            android:label="@string/title_activity_home">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>